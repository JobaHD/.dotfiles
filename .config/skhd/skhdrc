# === Session defaults ===
# kickstart yabai
hyper - y : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
# lock screen immediately
ctrl - escape : pmset displaysleepnow
# logout
ctrl + shift - e : osascript -e 'tell app "System Events" to log out'
# power down
ctrl + shift - p : osascript -e 'tell app "System Events" to shut down'
# reboot
ctrl + shift - b : osascript -e 'tell app "System Events" to restart'
# sleep
ctrl + shift - s : osascript -e 'tell application "System Events" to sleep'

# === Resize Mode ===
# Set resize border color
:: resize @ : yabai -m config active_window_border_color 0xFFFF00FF
# toggle resize mode
resize < hyper - r ; default
resize < escape ; default
default < hyper - r ; resize
# resize commands
resize < h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
resize < j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
resize < k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
resize < l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# === Navigation ===
# window focus
ctrl - h : yabai -m window --focus west
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - l : yabai -m window --focus east

ctrl - left : yabai -m window --focus west
ctrl - down : yabai -m window --focus south
ctrl - up : yabai -m window --focus north
ctrl - right : yabai -m window --focus east

# space focus and creation
ctrl - tab : yabai -m space --focus next || yabai -m space --focus first
ctrl + shift - tab : yabai -m space --focus prev || yabai -m space --focus last
ctrl - x : yabai -m space --focus recent
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9

# create a space
hyper - n : yabai -m space --create; \
		sketchybar --update

# destroy current space
hyper - d : yabai -m space --destroy

# === Modification ===
# Move window relatively
ctrl + shift - h : yabai -m window --warp west
ctrl + shift - j : yabai -m window --warp south
ctrl + shift - k : yabai -m window --warp north
ctrl + shift - l : yabai -m window --warp east

ctrl + shift - left : yabai -m window --warp west
ctrl + shift - down : yabai -m window --warp south
ctrl + shift - up : yabai -m window --warp north
ctrl + shift - right : yabai -m window --warp east

# send window to space
ctrl + shift - x : yabai -m window --space recent
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8

# Equalize size of windows
hyper - e : yabai -m space --balance

# Enable / Disable gaps in current workspace
lctrl - i : yabai -m space --toggle padding; \
	  yabai -m space --toggle gap; \
	  yabai -m config external_bar off:0:0; \
	  sketchybar --bar hidden=true;

rctrl - i : yabai -m space --toggle padding; \
	 yabai -m space --toggle gap; \
	 yabai -m config external_bar all:0:30;\
	 sketchybar --bar hidden=false;

# Rotate windows clockwise and anticlockwise
lalt - r         : yabai -m space --rotate 270
shift + lalt - r : yabai -m space --rotate 90

# Rotate on X and Y Axis
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + lctrl + alt - h : yabai -m window --insert west
shift + lctrl + alt - j : yabai -m window --insert south
shift + lctrl + alt - k : yabai -m window --insert north
shift + lctrl + alt - l : yabai -m window --insert east

# Float / Unfloat window
shift + alt - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Make window native fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen
